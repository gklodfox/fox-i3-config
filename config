include /etc/sway/config.d/*
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
set $mod Mod4
set $term org.wezfurlong.wezterm
set $menu wmenu-run

set $left h
set $down j
set $up k
set $right l

set $ws1 "1:  Messages"
set $ws2 "2:  Terminal"
set $ws3 "3:  Browser"
set $ws4 "4:  VM / Wine"
